<div class="grid-col">
  <div class="grid-row">
    <div class="editor">
      {{ivy-codemirror 
        value=this.code 
        options=(hash 
        lineNumbers=true 
        mode="javascript" 
        theme=this.theme)
        valueUpdated=(action (mut this.code))
      }}
    </div>
    <div class="gutter"></div>
    <div class="editor">
      {{ivy-codemirror 
        value=this.nodeApi 
        options=(hash 
        lineNumbers=true 
        mode="javascript" 
        theme=this.theme 
        autoIndent=true )}}
    </div>
  </div>
  <div class="gutter"></div>
  <div class="grid-row">
    <div class="editor">

      {{ivy-codemirror 
        value=this.ast 
        options=(hash 
        mode=this.jsonMode 
        theme=this.theme 
        foldGutter=true 
        lineNumbers=true
        lineWrapping=true
        gutters=this.gutters
        readOnly=true)}}
    </div>
    <div class="gutter"></div>
    <div class="editor">
      {{ivy-codemirror value="" 
        options=(hash 
        lineNumbers=true 
        mode="javascript" 
        theme=this.theme )}}
    </div>
  </div>
</div>
