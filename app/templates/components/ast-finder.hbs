<SplitViewHorizontal>
  <SplitViewVertical>
    <div>
      <p><strong>1.</strong> Enter source code here:</p>
      {{ivy-codemirror 
        value=code 
        options=(hash 
        lineNumbers=true 
        mode="javascript" 
        theme=theme)
        valueUpdated=(action (mut code))
      }}
    </div>
    <div>
      <p>Abstract Syntax Tree (AST) </p>
      {{ivy-codemirror 
        value=ast 
        options=(hash 
        mode=jsonMode 
        theme=theme 
        foldGutter=true 
        lineNumbers=true
        lineWrapping=true
        gutters=gutters
        readOnly=true)}}
    </div>
  </SplitViewVertical>
  <SplitViewVertical>
    <div>
      <p>AST Node Find api:</p>
      {{ivy-codemirror 
        value=nodeApi 
        options=(hash 
        lineNumbers=true 
        mode="javascript" 
        theme=theme 
        autoIndent=true )}}
    </div>
    <div>
      <p>&nbsp;</p> 
      {{ivy-codemirror value="" 
        options=(hash 
        lineNumbers=true 
        mode="javascript" 
        theme=theme )}}
    </div>
  </SplitViewVertical>
</SplitViewHorizontal>
